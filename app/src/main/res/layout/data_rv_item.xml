<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/nameIV"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameIV"
            android:layout_marginTop="3dp"
            android:text="Dono tela"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/dateIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="Hace 1 hora" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleIV"
            android:layout_marginTop="5dp"
            android:text="Tipo de tela:" />

        <TextView
            android:id="@+id/tipoIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleIV"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tipo"
            android:text="NavideÃ±a"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipo"
            android:layout_marginTop="5dp"
            android:text="Cantidad:" />

        <TextView
            android:id="@+id/cantidadIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipoIV"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tipo"
            android:text="5 kg"
            android:textColor="@color/black" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>